<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/colorOnSurface</item>
        <item name="colorOnPrimary">@color/colorOnSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorSurfaceVariant</item>
        <item name="android:statusBarColor">@color/colorSurface</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="FlooredBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnSurface</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Display" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="Title.Primary" parent="Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Ticker" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorOnSurfaceVariant</item>
    </style>

    <style name="Caption.Bold" parent="Caption">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Badge" parent="Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/pill_primary_surface</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_tiny</item>
    </style>

    <style name="Badge.Green" parent="Badge">
        <item name="android:background">@drawable/pill_green_surface</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Text.DatasetSelector" parent="Text">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dataset_selector</item>
        <item name="android:background">@drawable/dataset_bounds_selector</item>
    </style>

    <style name="EditText" parent="Text">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorHint">@color/colorOnSurfaceVariant</item>
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:backgroundTint">@color/colorSurfaceVariant</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/rectangle_rounded_medium_primary_surface_clipped_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="iconPadding">@dimen/padding_small</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:paddingTop">@dimen/padding_compact</item>
        <item name="android:paddingBottom">@dimen/padding_compact</item>
        <item name="android:paddingStart">@dimen/padding_compact</item>
        <item name="android:paddingEnd">@dimen/padding_compact</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.OutlinedIcon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
